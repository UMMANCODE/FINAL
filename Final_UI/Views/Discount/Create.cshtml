@model DiscountCreateRequest
@{
  ViewData["Title"] = "Create";
}

<div class="main-panel">
  <div class="content-wrapper">
    <div class="col-12 grid-margin stretch-card">
      <div class="card">
        <div class="card-body">
          <h4 class="card-title">Create</h4>
          <form class="forms-sample" asp-action="Create" method="post" enctype="multipart/form-data">

            <div class="form-group">
              <label asp-for="Code">Code</label>
              <input asp-for="Code" class="form-control" id="Code" placeholder="Code">
              <span class="text-danger" asp-validation-for="Code"></span>
            </div>

            <div class="form-group">
              <label asp-for="Amount">Amount</label>
              <input asp-for="Amount" class="form-control" id="Amount">
              <span class="text-danger" asp-validation-for="Amount"></span>
            </div>

            <div class="form-group">
              <label asp-for="ExpiryDate">ExpiryDate</label>
              <input asp-for="ExpiryDate" class="form-control" id="ExpiryDate" placeholder="ExpiryDate">
              <span class="text-danger" asp-validation-for="ExpiryDate"></span>
            </div>

            <div class="form-group">
              <label asp-for="HouseId">House</label>
              <select asp-for="HouseId" class="form-control" asp-items="@ViewBag.Houses" placeholder="ExpiryDate"></select>
              <span class="text-danger" asp-validation-for="HouseId"></span>
            </div>

            <button type="submit" class="btn btn-primary mr-2">Create</button>
            <a class="btn btn-dark" asp-action="Index">Cancel</a>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>

@section scripts {
  <script src="~/assets/js/file-upload.js"></script>
}