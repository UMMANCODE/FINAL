@model ChangeDetailsRequest

<div class="col-12 grid-margin stretch-card">
  <div class="card">
    <div class="card-body">
      <h4 class="card-title">Change Details</h4>
      <form class="forms-sample" asp-controller="Profile" asp-action="ChangeDetails" method="post" enctype="multipart/form-data">

        <div class="form-group">
          <label asp-for="UserName">UserName</label>
          <input asp-for="UserName" class="form-control" id="UserName" placeholder="UserName">
          <span class="text-danger" asp-validation-for="UserName"></span>
        </div>
        <div class="form-group">
          <label asp-for="FullName">FullName</label>
          <input asp-for="FullName" class="form-control" id="FullName" placeholder="FullName">
          <span class="text-danger" asp-validation-for="UserName"></span>
        </div>
        
        <div class="form-group">
          <label asp-for="Avatar">Avatar</label>
          <input asp-for="Avatar" name="Avatar" class="file-upload-default img-input" id="Avatar">
          <input type="hidden" name="AvatarLink" value="@ViewBag.AvatarLink" />
          <div class="input-group col-xs-12">
            <input type="text" class="form-control file-upload-info" disabled placeholder="Upload Avatar">
            <span class="input-group-append">
              <button class="file-upload-browse btn btn-primary" type="button">Upload</button>
            </span>
          </div>
          <div class="preview-box">
            <img width="200" class="preview-img" src="@ViewBag.AvatarLink" />
          </div>
          <span class="text-danger" asp-validation-for="Avatar"></span>
        </div>

        <div class="row justify-content-end">
          <button type="submit" class="btn btn-primary mr-2">Submit</button>
        </div>
      </form>
    </div>
  </div>
</div>